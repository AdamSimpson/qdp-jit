#
# Makefile for producing the top-level QDP functions using PETE
#

TOPDIR	= @top_srcdir@

PETE	= $(TOPDIR)/PETE
MAKEEXPR  = $(PETE)/Tools/MakeOperators

.PHONY: all

all: QDPOperators.h

QDPOperators.h: QDPClasses.in QDPOps.in
	$(MAKE) -C $(TOPDIR)/PETE/Tools  MakeOperators
	$(MAKEEXPR) --classes $< --operators QDPOps.in --pete-ops --op-tags --guard QDPOPS_H > $@


